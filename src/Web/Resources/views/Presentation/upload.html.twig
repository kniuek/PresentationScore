{% extends 'Layout/base.html.twig' %}

{%  block content %}
 	<div class="row">
        <form action="#" method="POST" enctype="multipart/form-data" class="col-md-offset-2">
           {# {{ form_row(form) }}#}
            <div class="form-group row"> 
                <label for="title" class="col-md-2">Tytuł</label>
                <div class="input-group col-md-6">
            	    {{ form_widget(form.title, {'attr': {'class': attr.class|default('') ~ 'form-control'}}) }}
            	</div>
            </div>
            <div class="form-group row">
            	<label for="supervisor" class="col-md-2">Opis</label>
            	<div class="input-group col-md-6">
            	     {{ form_widget(form.description, {'attr': {'class': attr.class|default('') ~ 'form-control'}}) }}
                </div>
            </div>
            <div class="form-group row">
            	<label for="reviewer" class="col-md-2">Załącznik</label>
            	<div class="input-group col-md-6">
            	     {{ form_widget(form.file, {'attr': {'class': attr.class|default('') ~ 'form-control'}}) }}
                </div>
            </div>
            <div class="row text-right">
                <div class=" col-md-8">
                    <button type="submit" class="btn btn-primary">Zapisz</button>
                </div>
            </div>
        </form>
    </div>
{%  endblock %}

