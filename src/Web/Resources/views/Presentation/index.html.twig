{% extends 'Layout/base.html.twig' %}

{% block content %}
	{% for presentation in pagerfanta %}
		<div class="panel panel-primary">
			<div class="panel-heading text-center"><h4>{{ presentation.author }} - {{ presentation.title }}</h4></div>
  			<div class="panel-body">
  				<div class="row">
					<div class="col-md-8">{{ presentation.description }}</div>
					<div class="col-md-4">
						<video controls class="img-thumbnail presentation">
							<source src="{{presentation.file}}" type="video/mp4">
		  					Your browser does not support HTML5 video.
						</video>
					</div>
				</div>
  			</div>
  			<div class="panel-footer">
  				<div class="starHalf"></div>
				
  			</div>

		</div>
	{% endfor %}
	{% if pagerfanta.hasNextPage() %}
		<li>
		    <a href="{{ path('homepage',{page: pagerfanta.getNextPage()}) }}">NastÄ™pny</a>
		</li>
	{% endif %}
{% endblock %}
